<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="PrivateResource">

    <PreferenceCategory
        android:title="Spinner Preferences"
        app:iconSpaceReserved="false"
        app:pref_categoryColor="@color/colorPrimary">

        <com.jaredrummler.android.colorpicker.ColorPreferenceCompat
            android:key="MODE_SPINNER_SPINNER_COLOR"
            android:title="Color"
            android:layout="@layout/preference"
            android:summary="Select the color of your Spinner element"
            app:cpv_dialogType="custom"
            app:cpv_showAlphaSlider="false"
            app:cpv_allowCustom="true"/>

        <SeekBarPreference
            android:key="MODE_SPINNER_SPINNER_BRIGHTNESS"
            android:layout="@layout/preference_widget_seekbar"
            android:max="255"
            android:title="Brightness"
            android:summary="Choose how bright the Spinner element on the LED-strip should be"
            app:iconSpaceReserved="false"
            app:min="0"
            app:showSeekBarValue="true" />

        <SeekBarPreference
            android:key="MODE_SPINNER_SPINNER_SPEED"
            android:layout="@layout/preference_widget_seekbar"
            android:max="100"
            android:title="Speed"
            android:summary="Choose how fast the Spinner element should travel around the LED strip"
            app:iconSpaceReserved="false"
            app:min="0"
            app:showSeekBarValue="true" />

        <SeekBarPreference
            android:key="MODE_SPINNER_SPINNER_LENGTH"
            android:layout="@layout/preference_widget_seekbar"
            android:max="40"
            android:title="Length"
            android:summary="Set the length of the Spinner element"
            app:iconSpaceReserved="false"
            app:min="0"
            app:showSeekBarValue="true" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Background Preferences"
        app:iconSpaceReserved="false"
        app:pref_categoryColor="@color/colorPrimary">

        <com.jaredrummler.android.colorpicker.ColorPreferenceCompat
            android:key="MODE_SPINNER_BACKGROUND_COLOR"
            android:title="Color"
            android:layout="@layout/preference"
            android:summary="Select the color of the background"
            app:cpv_dialogType="custom"
            app:cpv_showAlphaSlider="false"
            app:cpv_allowCustom="true"/>

        <SeekBarPreference
            android:key="MODE_SPINNER_BACKGROUND_BRIGHTNESS"
            android:layout="@layout/preference_widget_seekbar"
            android:max="255"
            android:title="Brightness"
            android:summary="Choose how bright the background should be"
            app:iconSpaceReserved="false"
            app:min="0"
            app:showSeekBarValue="true" />

    </PreferenceCategory>
</PreferenceScreen>